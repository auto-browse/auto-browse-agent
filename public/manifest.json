{
    "manifest_version": 3,
    "name": "Auto-Browse",
    "description": "Browser extension for automated web browsing using LLMs",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "sidePanel",
        "debugger"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "logo16x16.png",
        "32": "logo32x32.png",
        "48": "logo48x48.png",
        "128": "logo128x128.png"
    }
}